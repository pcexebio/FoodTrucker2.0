<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sw.edu.ulima.foodtrucker.LoginActivity"
    android:background="#36BCD4"
    android:orientation="vertical"
    android:id="@+id/Pantalla">

    <LinearLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"

        android:gravity="center">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ftcamion" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/campos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_below="@+id/image"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/eteUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Usuario"
            android:textSize="18dp"
            android:textColorHint="#ffffffff">
        </EditText>
        <EditText
            android:id="@+id/etePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:hint="Password"
            android:textSize="18dp"
            android:textColorHint="#ffffffff">
        </EditText>

        <LinearLayout
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_below="@+id/etePassword"
            android:orientation="vertical"
            android:gravity="center">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/fb"
            android:background="#36BCD4"
            android:id="@+id/login_button"
            />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/campos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"

        android:gravity="center">


            <Button
                android:id="@+id/butingresar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_toLeftOf="@+id/nuevo"
                android:background="@android:color/transparent"
                android:text="Ingresar"
                android:textSize="18dp"
                android:textColor="#ffffffff" />
            <Button
                android:id="@+id/butregistrar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:layout_alignRight="@+id/codigo"
                android:layout_alignTop="@+id/ingresar"
                android:text="Registrase"
                android:textColor="#ffffffff"
                android:textSize="18dp" />
        </LinearLayout>


